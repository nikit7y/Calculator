#include <iostream>
using namespace std;
int a,b;
void getData(){
    cout << "Enter two numbers:";
    cin >> a >> b;
}
    void cal() {
    char op;
    cout << "+-*/\n";
    cout << "Enter operator:";
    cin >> op;

    switch(op) {
    case '+':cout << "Result="<< a+b;
    break;
    case '-':cout << "Result"<< a-b;
    break;
    case '*':cout << "Result"<< a*b;
    break;
    case '/':cout << "Result"<< a/b;
    break;
    default:cout << "Invalid";
    break;
    }
}
int main() {
    getData();
    cal();
    return 0;

}
